<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             tools:layout_editor_absoluteY="25dp">

    <TextView
            android:text="Title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/title"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginEnd="58dp" android:layout_marginRight="58dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="70dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/title" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_text_view" app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintEnd_toStartOf="@+id/adult"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginLeft="8dp"/>
    <TextView
            android:text="Adutl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adult" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/arrow"
            android:id="@+id/arrowImageView"
            android:layout_marginEnd="16dp"

            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/adult" android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.242" android:layout_marginTop="8dp"/>

</android.support.constraint.ConstraintLayout>